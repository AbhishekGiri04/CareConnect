{
  "name": "careconnect-integrated",
  "version": "2.0.0",
  "description": "CareConnect - Integrated accessibility platform with hand gesture control",
  "main": "start.js",
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm start",
    "gesture": "node start-gesture-system.js",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "test": "echo 'Running tests...' && npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "security-check": "node scripts/security-check.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["careconnect", "accessibility", "gesture-control", "smart-home", "mediapipe", "react", "iot"],
  "author": "CareConnect Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}